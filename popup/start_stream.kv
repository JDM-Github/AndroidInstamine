<StartStream>:
    title: ""
    separator_height: 0
    size_hint: 0.9, 0.26
    auto_dismiss: True

    background_color: 1, 1, 1, 1
    background: ""

    canvas.before:
        Color:
            rgba: 0.9, 0.8,1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos

    ScrollView:
        effect_cls: ScrollEffect
        BoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(5)
            height: self.minimum_height
            size_hint_y: None

            Label:
                text: "Start Stream"
                color: 0.3, 0.3, 0.3, 1
                text_size: self.width, None
                halign: 'center'
                valign: 'center'
                font_size: sp(16)
                bold: True

            SpaceWidget:
                height: Window.height * 0.01

            BoxLayout:
                size_hint_y: None
                height: Window.height * 0.09
                orientation: "vertical"
                Label:
                    text: "Youtube Stream Link:"
                    color: 0.3, 0.3, 0.3, 1
                    text_size: self.width, None
                    halign: 'left'
                    valign: 'center'

                CustomTextInput:
                    multiline: False
                    text: root.link_text
                    on_text: root.link_text = self.text

            BoxLayout:
                size_hint_y: None
                height: Window.height * 0.04
                spacing: dp(5)
                CustomButtonWidget:
                    text: "Start Stream"
                    on_release: root.start_stream()
