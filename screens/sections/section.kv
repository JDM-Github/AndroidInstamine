<ProfileSection>:
    ScrollView:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        StackLayout:
            padding: '10dp'
            spacing: '10dp'
            height: self.minimum_height
            size_hint_y: None

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: '10dp'
                spacing: '5dp'

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                
                Widget:
                    size_hint: (None, None)
                    size: (dp(100), dp(100))
                    pos_hint: {'center_x': 0.5}
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Ellipse:
                            pos: self.pos
                            size: self.size
                        
                        Color:
                            rgba: 1, 1, 1, 1
                        Ellipse:
                            source: "assets/profile.png" 
                            pos: self.pos
                            size: self.size

                # User Name
                Label:
                    text: app.sm.main_state['user']['username']
                    font_size: sp(20)
                    halign: 'center'
                    valign: 'middle'
                    color: (0, 0, 0, 1)
                    size_hint_y: None
                    height: dp(30)

                Label:
                    text: "" 
                    font_size: sp(12)
                    halign: 'center'
                    valign: 'middle'
                    color: (0.5, 0.5, 0.5, 1)
                    size_hint_y: None
                    height: dp(20) if self.text else dp(0)

                CustomButtonWidget:
                    text: "Edit Profile"
                    size_hint_x: 0.5
                    pos_hint: {'center_x': 0.5}
                    size_hint_y: None
                    height: dp(30)
                    on_release: root.open_edit_profile()


            # BoxLayout:
            #     size_hint_y: None
            #     height: root.height * 0.1
            #     padding: '10dp'
            #     spacing: '10dp'
            #     canvas.before:
            #         Color:
            #             rgba: 1, 1, 1, 1
            #         RoundedRectangle:
            #             pos: self.pos
            #             size: self.size
            #             radius: [dp(10), ]

            #     CustomButtonWidget:
            #         text: "Orders"
            #         # on_press: root.go_to_orders()
            #         size_hint_x: 0.5
            #         default_color: "315cad"

            #     CustomButtonWidget:
            #         text: "My Purchases"
            #         # on_press: root.go_to_purchases()
            #         size_hint_x: 0.5
            #         default_color: "315cad"

            # Section for 'To Pay', 'To Ship', 'To Receive', 'To Rate'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: root.height * 0.15
                padding: '10dp'
                spacing: '10dp'

                BoxLayout:
                    orientation: 'vertical'
                    spacing: '5dp'
                    ImageButton:
                        source: "assets/topay.png" 
                        size_hint_y: None
                        height: dp(40)
                        color: (0.5, 0.5, 0.5, 1)
                        on_release: root.go_to_pay()

                    Label:
                        text: "To Pay"
                        font_size: sp(12)
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: dp(20)
                        color: (0.3, 0.3, 0.3, 1)

                # To Ship
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '5dp'
                    ImageButton:
                        source: "assets/toship.png" 
                        size_hint_y: None
                        height: dp(40)
                        color: (0.5, 0.5, 0.5, 1)
                        on_release: root.go_to_ship()

                    Label:
                        text: "To Ship"
                        font_size: sp(12)
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: dp(20)
                        color: (0.3, 0.3, 0.3, 1)

                # To Receive
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '5dp'
                    ImageButton:
                        source: "assets/toreceive.png"
                        size_hint_y: None
                        height: dp(40)
                        color: (0.5, 0.5, 0.5, 1)
                        on_release: root.go_to_receive()

                    Label:
                        text: "To Receive"
                        font_size: sp(12)
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: dp(20)
                        color: (0.3, 0.3, 0.3, 1)

                # To Rate
                BoxLayout:
                    orientation: 'vertical'
                    spacing: '5dp'
                    ImageButton:
                        source: "assets/torate.png"
                        size_hint_y: None
                        height: dp(40)
                        color: (0.5, 0.5, 0.5, 1)
                        on_release: root.go_is_complete()

                    Label:
                        text: "Complete"
                        font_size: sp(12)
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: dp(20)
                        color: (0.3, 0.3, 0.3, 1)

            # Section for 'My Likes', 'Recently Viewed', 'Buy Again'
            GridLayout:
                # orientation: 'horizontal'
                id: bottom_grid
                size_hint_y: None
                height: root.height * 0.12
                cols: 2
                spacing: '10dp'

                CustomButtonWidget:
                    id: who_order
                    text: "Who Orders"
                    on_release: root.go_is_order()
                    size_hint_x: 0.33
                    default_color: app.sm.theme.darker_color
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'center'

                CustomButtonWidget:
                    id: my_product
                    text: "My Products"
                    on_release: root.go_to_my_products()
                    size_hint_x: 0.33
                    default_color: app.sm.theme.darker_color
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'center'

                CustomButtonWidget:
                    text: "Recently Viewed"
                    on_release: root.go_to_recently_viewed()
                    size_hint_x: 0.33
                    default_color: app.sm.theme.darker_color
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'center'

                CustomButtonWidget:
                    text: "Buy Again"
                    on_release: root.go_to_buy_again()
                    size_hint_x: 0.33
                    default_color: app.sm.theme.darker_color
                    text_size: self.width, None
                    halign: 'center'
                    valign: 'center'
            
            CustomButtonWidget:
                text: "Become a Seller"
                size_hint_y: None
                height: root.height * 0.05
                on_press: root.become_seller()
            
            CustomButtonWidget:
                text: "Sign Out"
                size_hint_y: None
                default_color: "#cc4433"

                height: root.height * 0.05
                on_press: root.sign_out()











<Product>:
    canvas.before:
        Color:
            rgba: GetColor("#ffffff")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(5)]

    BoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: 'vertical'
        padding: dp(5)
        spacing: dp(5)

        AsyncImage:
            source: root.product_image
            size_hint_y: 0.7

        Label:
            text: root.product_name[:20] + ("..." if len(root.product_name) >= 20 else "")
            size_hint_y: None
            height: dp(20)
            halign: 'left'
            valign: 'middle'
            color: 0, 0, 0, 1
            font_size: sp(12)
            text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)
            spacing: dp(5)

            Label:
                text: f"₱{root.product_price}"
                size_hint_x: 0.5
                halign: 'left'
                valign: 'middle'
                color: 1, 0, 0, 1
                font_size: sp(12)
                text_size: self.size

            Label:
                text: f"Sold: {root.product_sold}"
                size_hint_x: 0.5
                halign: 'right'
                valign: 'middle'
                color: 0, 0, 0, 0.6
                font_size: sp(12)
                text_size: self.size


<ProductOrdered>:
    canvas.before:
        Color:
            rgba: GetColor("#ffffff")
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [dp(5)]

    BoxLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: 'horizontal'
        padding: dp(5)
        spacing: dp(5)

        AsyncImage:
            source: root.product_image
            size_hint_x: None
            width: Window.height * 0.2

        BoxLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            orientation: 'vertical'
            padding: dp(5)
            spacing: dp(5)
            Label:
                text: root.product_name[:20] + ("..." if len(root.product_name) >= 20 else "")
                size_hint_y: None
                height: dp(20)
                halign: 'left'
                valign: 'middle'
                color: 0, 0, 0, 1
                font_size: sp(12)
                text_size: self.size

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(20)
                spacing: dp(5)

                Label:
                    text: f"₱{root.product_price}"
                    size_hint_x: 0.5
                    halign: 'left'
                    valign: 'middle'
                    color: 1, 0, 0, 1
                    font_size: sp(12)
                    text_size: self.size

                Label:
                    text: f"Quantity: {root.product_num_ordered}"
                    size_hint_x: 0.5
                    halign: 'right'
                    valign: 'middle'
                    color: 0, 0, 0, 0.6
                    font_size: sp(12)
                    text_size: self.size

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                size_hint_y: None
                height: dp(60)
                
                CustomButtonWidget:
                    text: "DETAILS" if root.is_to_pay else "TRACK" if root.is_to_ship else "RATE" if root.is_to_receive else "SHIP" if root.is_order else "VIEW"
                    opacity: 0 if root.is_to_pay else 1
                    disabled: root.is_to_pay

                    on_release: root.open_ship() if root.is_order else root.none_func()

                CustomButtonWidget:
                    text: "CANCEL" if root.is_to_pay else "DETAILS" if root.is_to_ship else "DETAILS" if root.is_to_receive else "DECLINE" if root.is_order else "-----"
                    opacity: 0 if root.is_complete else 1
                    disabled: root.is_complete

                    on_release: root.cancel_order()



