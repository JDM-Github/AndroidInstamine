<ImageButton@ButtonBehavior+Image>:

<TopLayout>:
	size_hint_x: 0.9
	font_size: sp(16)
	halign: 'left'
	valign: 'top'
	bold: True
    text_size: self.width * 0.9, None

<NotificationWidget>:
    orientation: 'vertical'
    size_hint_y: None
    height: root.height * 0.10
    height: self.minimum_height
    padding: '15dp'
    spacing: '10dp'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(5), ]

        Color:
            rgba: 0, 0, 0, 0.1
        RoundedRectangle:
            pos: (self.x - dp(2), self.y - dp(2))
            size: (self.width + dp(4), self.height + dp(4))
            radius: [dp(5), ]

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: root.height * 0.005
        spacing: '5dp'
        Label:
            size_hint_x: 1
            text: ("[color=#aa3333]Unread[/color]" if root.unread else "")  + " " + root.title
            bold: True
            markup: True
            color: 0, 0, 0, 1
            font_size: sp(14)
            text_size: self.width, None
            halign: 'left'
        
        ImageButton:
            source: "assets/arrow-right.png" 
            size_hint_x: 0.05
            size_hint_y: None
            height: dp(20)
            width: dp(20)
            color: "#333333"
            pos_hint: {'center_y': 0.5}
            on_release: root.open_notification()

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: root.height * 0.08
        height: self.minimum_height
        spacing: '10dp'
        Label:
            text: root.message
            color: 0.2, 0.2, 0.2, 1
            font_size: sp(12)
            text_size: self.width, None
            halign: 'left'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: root.date
            color: 0.5, 0.5, 0.5, 1
            font_size: sp(10)
            size_hint_y: None
            height: dp(10)
            text_size: self.width, None
            halign: 'left'

<NotificationSection>:

