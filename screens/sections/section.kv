<CommentItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(60)
    padding: dp(10)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(5), ]

    Widget:
        size_hint_x: None
        size_hint_y: None
        size: dp(40), dp(40)
        canvas.before:
            Color:
                rgba: (0.9, 0.9, 0.9, 1) if root.profile_pic == "" else (1, 1, 1, 1)
            Ellipse:
                size: self.size
                pos: self.pos
                source: root.profile_pic
            
            Color:
                rgba: (0.3, 0.3, 0.3, 1)
            Line:
                ellipse: self.x, self.y, self.width, self.height

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)

        Label:
            text: root.user_name
            font_size: sp(14)
            bold: True
            color: (0.1, 0.1, 0.1, 1)
            text_size: self.width, None

        Label:
            text: root.comment
            font_size: sp(12)
            color: (0.3, 0.3, 0.3, 1)
            text_size: self.width, self.height
            halign: 'left'
            valign: 'top'

